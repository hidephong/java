   if((passTF.getPassword().toString().equals("")) || (passTF2.getPassword().toString().equals("")))
            {
                JOptionPane.showMessageDialog(this, "Password field(s) can not be blank", "WARNING", JOptionPane.ERROR_MESSAGE);
            }
            else
            {
                if(!passTF.getPassword().toString().equals(passTF2.getPassword().toString()))
                {
                    JOptionPane.showMessageDialog(this, "Passwords mismatch", "WARNING", JOptionPane.ERROR_MESSAGE);
                }
                else
                {
                    String pass = new String(currentPassTF.getPassword());

                    String enPass = new MD5Encrypt().encryptMD5(pass);

                     if(ada.getAdminPass(Session.getLoginID()).equals(enPass) == false)
        {
            JOptionPane.showMessageDialog(this, "Wrong current password", "WARNING", JOptionPane.ERROR_MESSAGE);
        }
        else
        {
                        if(ada.ChangePassword(enPass, aid)){
                            JOptionPane.showMessageDialog(this, "Change pass successful");
                            this.dispose();
                        }else{
                            JOptionPane.showMessageDialog(this, "Change pass successful","Error", ERROR);
                        }
        }
            }
        }
         
