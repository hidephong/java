<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar version="2.1" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
  <enterprise-beans>
        <session>
            <display-name>SBDeviceSB</display-name>
            <ejb-name>SBDevice</ejb-name>
            <home>bean.session.SBDeviceRemoteHome</home>
            <remote>bean.session.SBDeviceRemote</remote>
            <local-home>bean.session.SBDeviceLocalHome</local-home>
            <local>bean.session.SBDeviceLocal</local>
            <ejb-class>bean.session.SBDevice</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
            <ejb-local-ref>
                <ejb-ref-name>Device</ejb-ref-name>
                <ejb-ref-type>Entity</ejb-ref-type>
                <local-home>cmp.DeviceLocalHome</local-home>
                <local>cmp.DeviceLocal</local>
                <ejb-link>Device</ejb-link>
            </ejb-local-ref>
            </session>
        <entity>
            <description>jdbc:sqlserver://localhost:1433;databaseName=ASMDB [sa on dbo]</description>
            <display-name>DeviceEB</display-name>
            <ejb-name>Device</ejb-name>
            <local-home>cmp.DeviceLocalHome</local-home>
            <local>cmp.DeviceLocal</local>
            <ejb-class>cmp.Device</ejb-class>
            <persistence-type>Container</persistence-type>
            <prim-key-class>java.lang.Integer</prim-key-class>
            <reentrant>false</reentrant>
            <abstract-schema-name>Device</abstract-schema-name>
            <cmp-field>
                <field-name>id</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>deviceName</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>dvStatus</field-name>
            </cmp-field>
            <primkey-field>id</primkey-field>
            <query>
                <query-method>
                    <method-name>findById</method-name>
                    <method-params>
                        <method-param>java.lang.Integer</method-param>
                    </method-params>
                </query-method>
                <ejb-ql>SELECT OBJECT(d) FROM Device AS d WHERE d.id = ?1</ejb-ql>
            </query>
            <query>
                <query-method>
                    <method-name>findByDeviceName</method-name>
                    <method-params>
                        <method-param>java.lang.String</method-param>
                    </method-params>
                </query-method>
                <ejb-ql>SELECT OBJECT(d) FROM Device AS d WHERE d.deviceName = ?1</ejb-ql>
            </query>
            <query>
                <query-method>
                    <method-name>findByDvStatus</method-name>
                    <method-params>
                        <method-param>java.lang.String</method-param>
                    </method-params>
                </query-method>
                <ejb-ql>SELECT OBJECT(d) FROM Device AS d WHERE d.dvStatus = ?1</ejb-ql>
            </query>
             <query>
                <query-method>
                    <method-name>findAll</method-name>
                    <method-params>
                        <method-param></method-param>
                    </method-params>
                </query-method>
                <ejb-ql>SELECT OBJECT(d) FROM Device AS d </ejb-ql>
            </query>
            </entity>
        </enterprise-beans>
    <assembly-descriptor>
        <container-transaction>
            <method>
                <ejb-name>Device</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        <container-transaction>
            <method>
                <ejb-name>SBDevice</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        </assembly-descriptor>
    </ejb-jar>
