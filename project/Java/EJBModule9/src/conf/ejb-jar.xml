<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar version="2.1" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
  <enterprise-beans>
        <session>
            <display-name>NewSessionBeanSB</display-name>
            <ejb-name>NewSessionBean</ejb-name>
            <home>sv.NewSessionBeanRemoteHome</home>
            <remote>sv.NewSessionBeanRemote</remote>
            <ejb-class>sv.NewSessionBean</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
        </session>
        <entity>
            <display-name>DeviceBeanEB</display-name>
            <ejb-name>DeviceBean</ejb-name>
            <local-home>bean.entities.DeviceBeanLocalHome</local-home>
            <local>bean.entities.DeviceBeanLocal</local>
            <ejb-class>bean.entities.DeviceBean</ejb-class>
            <persistence-type>Container</persistence-type>
            <prim-key-class>java.lang.Long</prim-key-class>
            <reentrant>false</reentrant>
            <abstract-schema-name>DeviceBean</abstract-schema-name>
            <cmp-field>
                <field-name>pk</field-name>
            </cmp-field>
            <primkey-field>pk</primkey-field>
        </entity>
        </enterprise-beans>
    <assembly-descriptor>
        <container-transaction>
            <method>
                <ejb-name>NewSessionBean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        <container-transaction>
            <method>
                <ejb-name>DeviceBean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        </assembly-descriptor>
    </ejb-jar>
