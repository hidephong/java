<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar version="2.1" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
    <display-name>EJBModule2</display-name>
    <enterprise-beans>
        <session>
            <display-name>DeviceSBSB</display-name>
            <ejb-name>DeviceSB</ejb-name>
            <home>session.bean.DeviceSBRemoteHome</home>
            <remote>session.bean.DeviceSBRemote</remote>
            <local-home>session.bean.DeviceSBLocalHome</local-home>
            <local>session.bean.DeviceSBLocal</local>
            <ejb-class>session.bean.DeviceSB</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
        </session>
        <entity>
            <description>jdbc:sqlserver://localhost\TUANNA-PC\SQLEXPRESS:1433;databaseName=ASMDB [sa on dbo]</description>
            <display-name>DeviceEB</display-name>
            <ejb-name>Device</ejb-name>
            <local-home>entities.DeviceLocalHome</local-home>
            <local>entities.DeviceLocal</local>
            <ejb-class>entities.Device</ejb-class>
            <persistence-type>Container</persistence-type>
            <prim-key-class>java.lang.Integer</prim-key-class>
            <reentrant>false</reentrant>
            <abstract-schema-name>Device</abstract-schema-name>
            <cmp-field>
                <field-name>id</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>deviceName</field-name>
            </cmp-field>
            <cmp-field>
                <field-name>dvStatus</field-name>
            </cmp-field>
            <primkey-field>id</primkey-field>
            <query>
                <query-method>
                    <method-name>findById</method-name>
                    <method-params>
                        <method-param>java.lang.Integer</method-param>
                    </method-params>
                </query-method>
                <ejb-ql>SELECT OBJECT(d) FROM Device AS d WHERE d.id = ?1</ejb-ql>
            </query>
            <query>
                <query-method>
                    <method-name>findByDeviceName</method-name>
                    <method-params>
                        <method-param>java.lang.String</method-param>
                    </method-params>
                </query-method>
                <ejb-ql>SELECT OBJECT(d) FROM Device AS d WHERE d.deviceName = ?1</ejb-ql>
            </query>
            <query>
                <query-method>
                    <method-name>findByDvStatus</method-name>
                    <method-params>
                        <method-param>java.lang.String</method-param>
                    </method-params>
                </query-method>
                <ejb-ql>SELECT OBJECT(d) FROM Device AS d WHERE d.dvStatus = ?1</ejb-ql>
            </query>
            </entity>
        </enterprise-beans>
    <assembly-descriptor>
        <container-transaction>
            <method>
                <ejb-name>Device</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        <container-transaction>
            <method>
                <ejb-name>DeviceSB</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        </assembly-descriptor>
    </ejb-jar>
